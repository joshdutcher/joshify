{
  "name": "joshify",
  "version": "1.0.0",
  "description": "Personal portfolio website designed as a Spotify clone",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview --host",
    "lint": "eslint src --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 50",
    "type-check": "tsc --noEmit",
    "test": "npm run test:smoke",
    "test:smoke": "playwright test --config=playwright.smoke.config.js",
    "test:install": "playwright install --with-deps chromium",
    "ci": "npm run lint && npm run type-check && npm run build",
    "ci:full": "npm run ci && npm run test"
  },
  "dependencies": {
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "playwright": "^1.55.0",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.9.2",
    "vite": "^4.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
